.row
  .col.s12.m6
    = link to: user_path(@conn, :index) do
      .card-panel
        %h3
          = @user_count
          %small users
    - end

  .col.s12.m6
    .card-panel
      %h3
        = @post_count
        %small posts

  .col.s12.m6
    .card-panel
      %h3
        = @album_count
        %small albums

  .col.s12.m6
    .card-panel
      %h3.left
        = @photo_count
        %small photos
      .right
        = link to: home_path(@conn, :download_photos), target: "_blank" do
          .panel-svg
            = svg_image(@conn, "download", "wedding")
        - end
      .clearfix

.row
  .col.s12
    %img.circle.left{src: "#{@user.avatar}", style: "margin-top: 6px; margin-right: 8px;"}
    %h4
      = @user.name
      %small= @user.email

  .col.m6
    = form_for @changeset, user_path(@conn, :update, @user), fn f ->

      = render MyWedding.SharedView, "_form_error.html", changeset: @changeset

      .input-field
        = mtl_label f, :name
        = text_input f, :name

      .input-field
        = mtl_label f, :email
        = email_input f, :email

      .input-field
        = select f, :permission_level, permission_options
        = label f, :permission_level

        = submit "Update User", class: "btn"

    - end

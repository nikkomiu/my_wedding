%nav.page-nav
  .nav-wrapper.color-navbar
    .brand-logo.left
      = link "Wedding Website", to: post_path(@conn, :index)

    %ul.right
      %li= link "Pages", to: post_path(@conn, :index)
      %li= link "Photos", to: album_path(@conn, :index)

- if (get_flash(@conn, :info) != nil) do
  .card-panel.blue.lighten-1.white-text
    %b Heads Up!
    = get_flash(@conn, :info)

- if (get_flash(@conn, :error) != nil) do
  .card-panel.red.lighten-1.white-text
    %b Hey!
    = get_flash(@conn, :error)

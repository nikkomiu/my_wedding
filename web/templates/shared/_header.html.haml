%nav.page-nav
  .nav-wrapper.color-navbar
    .brand-logo.left
      = link to: post_path(@conn, :index) do
        = svg_image(@conn, "logo", "wedding")
        Our Wedding
      - end

    %ul.right
      %li= link "Pages", to: post_path(@conn, :index)
      %li= link "Photos", to: album_path(@conn, :index)
      = if is_authorized(@conn, :admin) do
        %li= link "Admin", to: home_path(@conn, :index)
      - end

- if (get_flash(@conn, :info) != nil) do
  .alert.card-panel.blue.lighten-1.white-text
    %b Heads Up!
    = get_flash(@conn, :info)

- if (get_flash(@conn, :error) != nil) do
  .alert.card-panel.red.lighten-1.white-text
    %b Hey!
    = get_flash(@conn, :error)

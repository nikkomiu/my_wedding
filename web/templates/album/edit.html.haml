.pad-sides.large
  %h4 Edit Album

  = form_for @changeset, album_path(@conn, :update, @album), fn f ->
    = render MyWedding.SharedView, "_form_error.html", changeset: @changeset

    = render "form.html", f: f

    .switch{style: "margin-bottom: 30px"}
      %label
        Private
        = checkbox f, :is_public
        %span.lever
        Public

    = submit "Update Album", class: "btn right"
  - end

  = link "Back", to: album_path(@conn, :show, @album), class: "btn waves-effect waves-light grey left"
  %a.modal-trigger.btn.red.mar-sides.waves-effect.waves-light{href: "#confirm"} Delete

= render MyWedding.SharedView, "_confirm.html", button: button "Delete", to: album_path(@conn, :delete, @album), method: "delete", class: "btn btn-flat red-text red-outline"

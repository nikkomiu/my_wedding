.pad-sides.large
  %h4 Edit Album

  = form_for @changeset, album_path(@conn, :update, @album), fn f ->
    = render MyWedding.SharedView, "_form_error.html", changeset: @changeset

    = render "form.html", f: f

    .input-field
      = link "Back", to: album_path(@conn, :show, @album), class: "btn waves-effect waves-light grey"
      = button "Delete", to: album_path(@conn, :delete, @album), method: :delete, data: [confirm: "Are you sure?"], class: "btn red"
      = submit "Update Album", class: "btn right"
  - end

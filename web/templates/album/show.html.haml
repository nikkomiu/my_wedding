.pad-sides.large
  %h4.truncate
    = @album.title
    %small= @album.description

  .row
    = for photo <- @album.photos do
      .col.s12.m4.l3
        .card
          .card-image
            %img.materialboxed{src: "#{static_path(@conn, upload_path(photo.path, "800x500"))}"}
          .card-action
            = link "Download", to: photo_path(@conn, :show, photo), class: "blue-text right waves-effect"
            = button "Delete", to: photo_path(@conn, :show, photo), method: :delete, data: [confirm: "Are you sure?"], class: "btn-flat red-text waves-effect"
    - end

.fixed-action-btn
  .btn-floating.btn-large.red= svg_image @conn, "more_vert"
  %ul
    %li
      = link to: album_path(@conn, :edit, @album), class: "btn-floating blue tooltipped", "data-position": "left", "data-tooltip": "Edit Album" do
        = svg_image @conn, "mode_edit"
      - end
    %li
      = link to: album_path(@conn, :upload, @album), class: "btn-floating green tooltipped", "data-position": "left", "data-tooltip": "Add Photos" do
        = svg_image @conn, "add"
      - end

.pad-sides.large
  %h4 New Page

  = form_for @changeset, post_path(@conn, :create), fn f ->

    = render MyWedding.SharedView, "_form_error.html", changeset: @changeset

    = render "form.html", f: f

    .form-group
      = submit "Create Page", class: "btn right"
      = link to: post_path(@conn, :index), class: "btn grey" do
        = svg_image(@conn, "arrow_back")
      - end

  - end
